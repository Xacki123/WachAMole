<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Head"
    tools:context=".ActivityGame">

    <ImageView
        android:id="@+id/a3"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginTop="46dp"
        android:clickable="false"
        android:onClick="a3clik"

        android:src="@drawable/krot"
        app:layout_constraintStart_toEndOf="@+id/a2"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <ImageView
        android:id="@+id/a1"

        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginTop="46dp"
        android:onClick="a1clik"
        android:src="@drawable/krot"
        app:layout_constraintEnd_toStartOf="@+id/a2"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <ImageView
        android:id="@+id/a2"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginTop="46dp"
        android:clickable="false"
        android:onClick="a2clik"
        android:src="@drawable/krot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <ImageView
        android:id="@+id/a5"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:clickable="false"
        android:onClick="a5clik"
        android:src="@drawable/krot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a2" />

    <ImageView
        android:id="@+id/a4"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:clickable="false"
        android:onClick="a4clik"
        android:src="@drawable/krot"
        app:layout_constraintEnd_toStartOf="@+id/a5"
        app:layout_constraintTop_toBottomOf="@+id/a1" />

    <ImageView
        android:id="@+id/a6"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:clickable="false"
        android:onClick="a6clik"
        android:src="@drawable/krot"
        app:layout_constraintStart_toEndOf="@+id/a5"
        app:layout_constraintTop_toBottomOf="@+id/a3" />

    <ImageView
        android:id="@+id/a7"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:clickable="false"
        android:onClick="a7clik"
        android:src="@drawable/krot"
        app:layout_constraintEnd_toStartOf="@+id/a8"
        app:layout_constraintTop_toBottomOf="@+id/a4" />

    <ImageView
        android:id="@+id/a8"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:clickable="false"
        android:onClick="a8clik"
        android:src="@drawable/krot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a5" />

    <ImageView
        android:id="@+id/a9"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:clickable="false"
        android:onClick="a9clik"
        android:src="@drawable/krot"
        app:layout_constraintStart_toEndOf="@+id/a8"
        app:layout_constraintTop_toBottomOf="@+id/a6" />

    <TextView
        android:id="@+id/time"
        android:layout_width="105dp"
        android:layout_height="33dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:text="Timer"
        android:textColor="@color/textCR"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/score"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textColor="@color/textCR"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/button"
        android:onClick="start"
        android:text="Start"
        android:textColor="@color/textCR"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a8" />

</androidx.constraintlayout.widget.ConstraintLayout>